<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">


        <Button
            android:id="@+id/button1"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:onClick="onMyButtonClick"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="54dp"
            android:onClick="onMyButtonClick"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="94dp"
            android:onClick="onMyButtonClick"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="134dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="174dp"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="14dp"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="54dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="94dp"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="134dp"
            android:text="9" />

        <Button
            android:id="@+id/button10"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="174dp"
            android:text="10" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="214dp"
            android:text="СТОП" />

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="404dp"
            android:layout_alignBaseline="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_gravity="right"
            android:layout_marginStart="58dp"
            android:layout_toEndOf="@+id/button6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Lift"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:background="@color/colorGreen" />

            <Button
                android:id="@+id/button11"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="1" />

            <Button
                android:id="@+id/button12"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button11"
                android:layout_alignParentEnd="true"
                android:text="2" />

            <Button
                android:id="@+id/button13"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button12"
                android:layout_alignParentEnd="true"
                android:text="3" />

            <Button
                android:id="@+id/button14"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button13"
                android:layout_alignParentEnd="true"
                android:text="4" />

            <Button
                android:id="@+id/button15"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button14"
                android:layout_alignParentEnd="true"
                android:text="5" />

            <Button
                android:id="@+id/button16"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button15"
                android:layout_alignParentEnd="true"
                android:text="6" />

            <Button
                android:id="@+id/button17"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button16"
                android:layout_alignParentEnd="true"
                android:text="7" />

            <Button
                android:id="@+id/button18"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button17"
                android:layout_alignParentEnd="true"
                android:text="8" />

            <Button
                android:id="@+id/button19"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button18"
                android:layout_alignParentEnd="true"
                android:text="9" />

            <Button
                android:id="@+id/button20"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_above="@+id/button19"
                android:layout_alignParentEnd="true"
                android:text="10" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
